<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to 'edit', edit_task_path(task) %>
    <%= link_to 'delete', task_path(task), method: 'delete', data: { confirm: "Delete #{task.title}" } %>

  </li>
  <% end %>
</ul>

<%= link_to 'Create a new task', new_task_path %>
